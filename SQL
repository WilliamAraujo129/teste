--@@
CREATE DATABASE TESTEPHP
USE TESTEPHP
--@@
CREATE TABLE CEP(
	ID_CEP INT NOT NULL AUTO_INCREMENT
   ,TX_CEP VARCHAR(8) NOT NULL
   ,TX_LOGRADOURO VARCHAR(255) NOT NULL
   ,TX_COMPLEMENTO VARCHAR(255) 
   ,TX_BAIRRO VARCHAR(255) 
   ,TX_LOCALIDADE VARCHAR(255) NOT NULL
   ,TX_UF CHAR(2) NOT NULL
   ,NU_IBGE INT 
   ,NU_GIA INT 
   ,NU_DDD INT NOT NULL
   ,NU_SIAFI INT 
   ,DT_INC TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP
   ,UNIQUE(TX_CEP)
   ,PRIMARY KEY (ID_CEP) 
); 